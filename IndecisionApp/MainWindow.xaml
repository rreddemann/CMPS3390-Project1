<Window x:Class="WpfIndecisionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfIndecisionApp"
        mc:Ignorable="d"
        Title="Indecision Maker" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Choices" FontWeight="Bold" Grid.Row="0"/>

        <ListBox x:Name="ChoicesList" Grid.Row="1" Margin="0,5,0,10" />

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Option:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="OptionInput" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center">
            <Button Content="Add" Width="70" Margin="5,0" Click="AddButton_Click" Background="LightGreen"/>
            <Button Content="Remove" Width="70" Margin="5,0" Click="RemoveButton_Click" Background="Red"/>
            <Button Content="Decide" Width="70" Margin="5,0"  Click="DecideButton_Click" Height="47" Background="LightBlue"/>
        </StackPanel>
    </Grid>
</Window>
